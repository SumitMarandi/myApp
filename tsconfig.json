{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
